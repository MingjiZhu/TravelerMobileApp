<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.cordovatravelerapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Traveler</name>
    <description>
        A Traveler Cordova application that add trip information and upcoming plans.
    </description>
    <author email="mzhu9815@conestogac.on.ca" href="https://www.linkedin.com/in/mingji-zhu">
        Mingji Zhu
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <icon src="node_modules/icon.png" />
    <splash src="node_modules/splash.png" />

    <engine name="android" spec="~7.1.4" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />

</widget>
